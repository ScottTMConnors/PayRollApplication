@model PayRollApplication.Models.UserProfile

<h2>Index</h2>

@using (Html.BeginForm("Index", "Login", FormMethod.Post)) {
    <fieldset>
        <legend>
            Login
        </legend>
        @if (ViewBag.Message != null) {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <table>
            <tr>
                <td>@Html.LabelFor(a => a.UserName)</td>
                <td>@Html.TextBoxFor(a => a.UserName)</td>
                <td>@Html.ValidationMessageFor(a => a.UserName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(a => a.Password)</td>
                <td>@Html.PasswordFor(a => a.Password)</td>
                <td>@Html.ValidationMessageFor(a => a.Password)</td>
            </tr>
            <tr>
                <td>@Html.AntiForgeryToken()<input type="submit" value="Login" />
                </td>
            </tr>
        </table>
    </fieldset>
}